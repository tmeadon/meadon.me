<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    background-color: #f0f8ff;
    font-family: Arial, sans-serif;
    text-align: center;
    padding: 20px;
  }
  h1 {
    font-size: 3rem;
    color: #000; /* Changed to black for better contrast */
    margin-bottom: 20px;
  }
  .strikethrough {
    text-decoration: line-through;
    color: #888;
  }
  p {
    font-size: 1.5rem;
    color: #555;
    margin-top: 0;
  }
  .ticket-info {
    margin-top: 20px;
    padding: 10px 20px;
    background-color: #fff;
    border: 2px solid #333;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  img {
    max-width: 100%;
    height: auto;
    margin-top: 20px;
    border-radius: 10px;
  }
  @media (max-width: 600px) {
    h1 {
      font-size: 2rem;
    }
    p {
      font-size: 1rem;
    }
    .ticket-info {
      padding: 5px 10px;
      font-size: 0.875rem; /* Adjust font size for mobile */
    }
  }
</style>

